{% extends 'base.html.twig' %}

{% block title %}All Albums
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4 text-left">Check out all the albums!</h1>

		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
			{% for album in albums %}
				<div class="col">
					<div
						class="card h-100 shadow-sm">
						{# I can add images later #}
						<div
							class="card-body">
							{# Change this line #}
							<h5 class="card-title">
								<a href="{{ path('show_album', {'id': album.id}) }}" class="text-decoration-none text-dark stretched-link">
									{{ album.title }}
								</a>
							</h5>
							<h6 class="card-subtitle mb-2 text-muted">{{ album.artist.name }}</h6>

							<p class="card-text">
								<small
									class="text-muted">
									{# Genres as badges #}
									{% for genre in album.genres %}
										<span class="badge bg-secondary">{{ genre.name }}</span>
									{% endfor %}
								</small>
							</p>
							<p class="card-text mt-2">
								<small class="text-muted">
									{% set reviewCount = album.reviews|length %}
									<span class="border rounded-pill px-3 py-1 text-primary bg-light">
										{{ reviewCount }}
										{{ reviewCount == 1 ? 'Review' : 'Reviews' }}
									</span>
								</small>
							</p>
							{# Optional: Show truncated tracklist or review count #}
						</div>

					</div>
				</div>
			{% else %}
				<div class="col-12">
					<div class="alert alert-warning text-center">
						No albums found.
						<a href="{{ path('new_album') }}">Add the first one!</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
